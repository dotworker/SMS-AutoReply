<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header mit Logo-Farben -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/logo_teal"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intelligente automatische SMS-Antworten"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Switch mit Logo-Farben -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <Switch
                android:id="@+id/autoReplySwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🤖 Auto-Reply aktivieren"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:thumbTint="@color/switch_thumb_color"
                android:trackTint="@color/switch_track_color" />
        </androidx.cardview.widget.CardView>
        <!-- NEU: Verzögerungs-Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:id="@+id/delaySwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏱️ Zufällige Verzögerung (0-10s)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:thumbTint="@color/switch_thumb_color"
                    android:trackTint="@color/switch_track_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Macht die Antwort natürlicher und verhindert Spam-Erkennung"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Schlüsselwort Bereich -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 Schlüsselwort (Bedingung):"
                    android:textColor="@color/logo_dark_blue"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/keywordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="z.B. HILFE, STATUS, INFO"
                    android:backgroundTint="@color/logo_teal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Erlaubte Nummern Bereich -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📞 Erlaubte Absender-Nummern (optional):"
                    android:textColor="@color/logo_dark_blue"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/allowedNumbersEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="z.B. +49123456789, 0987654321"
                    android:backgroundTint="@color/logo_purple" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Antwort-Nachricht Bereich -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💬 Antwort-Nachricht:"
                    android:textColor="@color/logo_dark_blue"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/replyMessageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Automatische Antwort-Nachricht"
                    android:minLines="3"
                    android:gravity="top"
                    android:backgroundTint="@color/logo_orange" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Speichern Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="⚡ Einstellungen speichern"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/logo_orange"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Info Bereich mit PayPal-Link -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/logo_purple">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Wichtige Hinweise:"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Die App benötigt SMS-Berechtigungen\n• Für Android 15+ müssen diese manuell aktiviert werden\n• Leer lassen bei 'Erlaubte Nummern' = alle Absender erlaubt\n• Mehrere Nummern mit Komma trennen"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- NEU: Spenden-Bereich -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/logo_orange">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="☕ Diese App gefällt dir?"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wer mich unterstützen möchte, kann mir gerne eine kleine Spende über PayPal zukommen lassen. Danke! 🙏"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:id="@+id/donateLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💳 Hier PayPal-Spende senden"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:background="@drawable/donate_button_ripple"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
